{
  "manifest_version": 3,
  "name": "Qry - Your Browser Command Center",
  "version": "0.0.1",
  "description": "The fastest way to search and control your browser.",
  
  "permissions": [
    "tabs",
    "storage",
    "bookmarks",
    "history",
    "scripting",
    "favicon"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],

  "commands": {
    "toggle-palette": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space",
        "mac": "Command+Shift+Space"
      },
      "description": "Open the Context command palette"
    }
  },

  "web_accessible_resources": [
    {
      "resources": ["palette.html", "fuse.min.mjs"],
      "matches": ["<all_urls>"]
    }
  ]
}